<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="Member">
	<resultMap type="com.kh.tt.member.model.vo.Member" id="memberResultSet">
		<!-- property 필드명, column 컬럼명과 일치해야 한다 -->
		<id property="uno" column="M_UNO"/>
		<result property="userId" column="M_ID"/>
		<result property="nickName" column="M_NICKNAME"/>
		<result property="userName" column="M_NAME"/>
		<result property="userPwd" column="M_PWD"/>
		<result property="birth" column="M_BIRTH"/>
		<result property="gender" column="M_GENDER"/>
		<result property="email" column="M_EMAIL"/>
		<result property="enrollDate" column="M_ENROLL_DATE"/>
		<result property="bankNo" column="M_BANK_NO"/>
		<result property="bank" column="M_BANK"/>
		<result property="warningNo" column="M_WARNING_NO"/>
		<result property="status" column="M_STATUS"/>
		<result property="banStatus" column="M_BAN_STATUS"/>
		<result property="reason" column="M_REASON"/>
		<result property="btYN" column="M_BT_YN"/>
		<result property="totalClover" column="M_TOTAL_CLOVER"/>
		<result property="adminYN" column="M_ADMIN_YN"/>
	</resultMap>
	
	<select id="loginCheck" parameterType="Member" resultMap="memberResultSet" >
		SELECT * 
		FROM MEMBER
		WHERE M_ID = #{userId}
		AND M_PWD = #{userPwd}
		AND M_STATUS = 'Y'
		AND M_BAN_STATUS = 'N'
	</select>
	
	<insert id="insertMember" parameterType="Member">
		INSERT INTO MEMBER
		VALUES(
		SEQ_M_UNO.NEXTVAL
		, #{userId}
		, #{nickName}
		, #{userName}
		, #{userPwd}
		, #{birth}
		, #{gender}
		, #{email}
		, SYSDATE
		, NULL
		, NULL
		, DEFAULT
		, DEFAULT
		, DEFAULT
		, NULL
		, DEFAULT
		, DEFAULT
		, DEFAULT
		)
	</insert>
	
	<!-- 암호화 된 비밀번호 조회용 메소드 -->
	<select id="selectPwd" resultType="java.lang.String" parameterType="java.lang.String">
		SELECT M_PWD
		FROM MEMBER
		WHERE M_ID = #{userId}
		AND M_STATUS = 'Y'
	</select>
	
	<!-- 로그인 정보 조회용 메소드 -->
	<select id="selectLoginUser" resultMap="memberResultSet" parameterType="Member">
		SELECT *
		FROM MEMBER
		WHERE M_ID = #{userId}
		AND M_STATUS = 'Y'
	</select>
	
	<!-- 아이디 중복 체크 -->
	<select id="idCheck" parameterType="String" resultType="Integer">
	    SELECT COUNT(*)
	    FROM MEMBER
	    WHERE M_ID = #{userId}
	</select>
	
	<!-- 아이디 중복 체크 -->
	<select id="nickNameCheck" parameterType="String" resultType="Integer">
	    SELECT COUNT(*)
	    FROM MEMBER
	    WHERE M_NICKNAME = #{nickName}
	</select>
	
	<!-- 회원 전체 조회  -->
	<select id="memberList" resultMap="memberResultSet">
		SELECT M_UNO
		 , M_NAME
	     , M_ID
	     , M_NICKNAME
	     , M_GENDER
	     , M_BANK
	     , M_WARNING_NO
	     , M_BAN_STATUS
	     , M_STATUS
		FROM MEMBER
		WHERE M_ADMIN_YN = 'N'
		ORDER BY M_UNO
	</select>
	
	<!-- 정지 회원 조회 -->
	<select id="memberList" resultMap="memberResultSet">
		SELECT M_UNO
	     , M_NAME
	     , M_ID
	     , M_NICKNAME
	     , M_WARNING_NO
	     , M_BAN_STATUS
	     , M_STATUS
	    FROM MEMBER
	    WHERE M_ADMIN_YN = 'N'
	    ORDER BY M_UNO;
	</select>
	

	
</mapper>